<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="#CB87D8"
         tools:ignore="MissingConstraints">

         <TextView
             android:id="@+id/numbers"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="#187369"
             android:padding="10dp"
             android:text="Number"
             android:layout_marginLeft="80dp"
             android:layout_marginTop="50dp"
             android:textColor="#F4ECEC"
             android:textSize="44dp" />

         <TextView
             android:id="@+id/family"
             android:layout_width="250dp"
             android:layout_height="wrap_content"
             android:layout_below="@+id/numbers"
             android:padding="20dp"
             android:background="#F37952"
             android:text="Family Members"
             android:layout_marginTop="50dp"
             android:layout_marginLeft="70dp"
             android:textColor="#D2F3D2"
             android:textSize="35dp" />

         <TextView
             android:id="@+id/colors"
             android:layout_width="200dp"
             android:text="Colors"
             android:layout_marginTop="50dp"
             android:textColor="@color/white"
             android:textSize="44dp"
             android:layout_marginLeft="80dp"
             android:background="@color/black"
             android:layout_height="100dp"
             android:padding="20dp"
             android:layout_below="@id/family"
             />
         <TextView
             android:id="@+id/phrase"
             android:layout_width="200dp"
             android:text="Phrase"
             android:textColor="@color/white"
             android:textSize="44dp"
             android:layout_weight="1"
             android:layout_marginTop="50dp"
             android:background="#75e900"
             android:layout_height="100dp"
             android:padding="20dp"
             android:layout_below="@id/colors"
             android:layout_marginLeft="80dp"



             />
     </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>